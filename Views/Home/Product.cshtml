<div class="container mt-5">
    <div class="row">
        <div class="col-md-3 bg-light p-3 border">
            <h4 class="text-center">Filters</h4>
            <p>Add filtering here later</p>
        </div>

        <div class="col-md-9">
            <h1 class="display-4 text-right">Welcome</h1>
            <p class="text-secondary text-right">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

            <hr>

            @model ProductListViewModel

            <div class="mt-4">
                <h2>Products List</h2>
                <div class="list-group">
                    @foreach (Product p in Model.Products)
                    {
                        <div class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@p.Name</h5>
                                <small class="text-muted">Price: $@p.Price</small>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4" page-model="@Model.PaginationInfo" page-action="Product"></div>
        </div>
    </div>
</div> 


